<mvc:View controllerName="szehomework2.controller.PersonsList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <Toolbar id="productSearch"  class="sapUiResponsiveMargin"  >
            <SearchField width="50%" liveChange="onFilter"/>
            <ToolbarSpacer/>
            <Button icon="sap-icon://add" text="{i18n>title_NewContact}" press="onNewContact"/>
        </Toolbar>
        <Table id="personTable" items="{/Employees}" itemPress="onPersonPressed">
            <columns>
                <Column id="productColumn">
                    <Text text="Name"></Text>
                </Column>
                <Column>
                    <Text text="Position"></Text>
                </Column>
                <Column>
                    <Text text="More informations"></Text>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="DetailAndActive" detailPress="onModifyPressed">
                    <cells>
                        <ObjectIdentifier title="{FirstName} {LastName}" text="{TitleOfCourtesy}"/>
                        <Text text="{Title}"></Text>
                        <Button text="More informations" icon="sap-icon://information" press="onShowPersonDetails" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>