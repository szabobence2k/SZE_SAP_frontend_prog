<mvc:View controllerName="szehomework2.controller.PersonDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <Page id="detailpage" title="Details">
        <content>
          <form:SimpleForm >
        <Label text="Name" />
        <Input id="personNameInput" value="{Name}" editable="{inputModel>/editable}"/>
        <Label text="{i18n>label_FirstName}"/>
				<Input editable="{inputModel>/editable}" value="{NewContact>FirstName}"/>
				<Label text="{i18n>label_LastName}"/>
				<Input editable="{inputModel>/editable}" value="{NewContact>LastName}"/>
				<Label text="{i18n>label_Title}"/>
        <Input editable="{inputModel>/editable}" value="{NewContact>Title}"/>
        <Label text="Unit Price" />
        <Input value="{UnitPrice} $" editable="{inputModel>/editable}"/>
        
        <Button text="Edit" press="onEditPress" />
        <Button text="Delete" press="onDeletePress" type="Reject" visible="{= ${inputModel>/editable} === true ? false : true}"/>
        </form:SimpleForm>
        <Button text="Save" icon="sap-icon://save" press="onSave" visible="{inputModel>/editable}"/>
        </content>
    </Page>
</mvc:View>