<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog busyIndicatorDelay="50" title="{i18n>title_NewContact}" showHeader="true">
		<content>
			<f:SimpleForm editable="false" layout="ResponsiveGridLayout">
				<f:content>
					<Label text="{i18n>label_FirstName}"/>
					<Input editable="true" value="{NewContact>/FirstName}"/>
					<Label text="{i18n>label_LastName}"/>
					<Input editable="true" value="{NewContact>/LastName}"/>
					<Label text="{i18n>label_Title}"/>
					<Select id="titleTypeSelect" items="{TitleTypeModel>/}" selectedKey="{NewContact>/Title}">
                        <core:Item id="titleTypeItem" key="{TitleTypeModel>key}" text="{TitleTypeModel>text}" />
                    </Select>
					<Label text="{i18n>label_TitleOfCourtesy}"/>
					<Select selectedKey="{NewContact>/TitleOfCourtesy}">
    					<items>
							<core:Item key="" text="" />
       			 			<core:Item key="Mr." text="Mr." />
							<core:Item key="Ms." text="Ms." />
							<core:Item key="Mrs." text="Mrs." />
							<core:Item key="Dr." text="Dr." />
						</items>
					</Select>
					<Label text="{i18n>label_BirthDate}"/>
					<DatePicker value="{NewContact>/BirthDate}"/>
					<Label text="{i18n>label_HireDate}"/>
                    <DatePicker value="{NewContact>/HireDate}"/>
					<Label text="{i18n>label_Address}"/>
					<Input editable="true" value="{NewContact>/Address}"/>
					<Label text="{i18n>label_City}"/>
					<Input editable="true" value="{NewContact>/City}"/>
					<Label text="{i18n>label_Region}"/>
					<Input editable="true" value="{NewContact>/Region}"/>
					<Label text="{i18n>label_PostalCode}"/>
					<Input editable="true" value="{NewContact>/PostalCode}"/>
					<Label text="{i18n>label_Country}"/>
					<Input editable="true" value="{NewContact>/Country}"/>
					<Label text="{i18n>label_HomePhone}"/>
					<Input editable="true" value="{NewContact>/HomePhone}"/>
					<Label text="{i18n>label_Extension}"/>
					<Input editable="true" value="{NewContact>/Extension}"/>
					<Label text="{i18n>label_Photo}"/>
					<Input editable="true" value="{NewContact>/PhotoPath}"/>
					<Label text="{i18n>label_Notes}"/>
					<Input editable="true" value="{NewContact>/Notes}"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<buttons>
            <Button text="{i18n>button_add}" press=".onDialogAdd"/>
			<Button text="{i18n>button_cancel}" press=".onDialogClose"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>